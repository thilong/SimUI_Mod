{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pack Resources",
            "type": "shell",
            "command": "${workspaceFolder}/../build/packfolder.exe",
            "args": [
                "view",
                "res.go",
                "-v",
                "res",
                "-go"
            ],
        },
        {
            "label": "Build",
            "type": "go",
            "command": "build",
            "args": [
                "-o",
                "${workspaceFolder}/../app/simUI-64.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/",
                "env": {
                    "GO111MODULE" : "on",
                    "CGO_ENABLED" : 1
                }
            },
            "problemMatcher": [
                "$go"
            ],
            "group": "build",
            "dependsOn": ["Pack Resources"]
        }
    ]
}